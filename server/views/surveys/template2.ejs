<%- include ../partials/header.ejs %>
<%- include ../partials/nav.ejs %>

<!-- Content  for the add page -->
<div class="survey-container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1 id="business_title"><%=title %></h1>

      <form class="form" method="post">

        <p class="instruction">Thank you for shopping with us. <br> Please respond to the survey below to help us improve our customer service.</p>
        <div class="from-group">
          <input class="form-check-input" type="hidden" name="surveyType" id="surveyType" value="Customer Satisfaction" checked >
          <!-- <label class="form-check-label" for="surveyType">Marketing</label> -->
        </div>


        <div class="from-group">
          <label for="question0">Q1: What is your name?</label><br>
          <input type="text" class="form-control" id="question0" placeholder="Enter your name" name="question0"  />

      </div>

        <div class="from-group">
            <label for="question1">Q2: How would you rate your shopping experince today?</label><br>
            <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="inputGenderM" name="question1" value="Male" />
                <label class="form-check-label" for="inputGenderM">Poor</label>
            </div>
            <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="inputGenderF" name="question1" value="Female" />
                <label class="form-check-label" for="inputGenderNot">Good</label>
            </div>
            <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="inputGenderNot" name="question1" value="Prefer not to answer"  />
                <label class="form-check-label" for="inputGenderNot">Excellent</label>
            </div>
        </div>

        <div class="from-group">
          <label for="question2">Q3: Name of the employee that helped you today</label><br>
          <input type="text" class="form-control" id="question2" placeholder="Employee name" name="question2"  />
        </div>

        <div class="from-group">
          <label for="question3">Q4: How likely are you to purchase again from us?</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="question3" id="frequency1" value="Everyday" >
                <label class="form-check-label" for="frequency1">Highly likely</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="question3" id="frequency2" value="2 or 3 times a week">
                <label class="form-check-label" for="frequency2">Likely</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="question3" id="frequency4" value="Once a month">
                <label class="form-check-label" for="frequency4">Maybe</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="question3" id="frequency5" value="Less than once a month">
                <label class="form-check-label" for="frequency5">Never</label>
            </div>
        </div>

        <div class="from-group">
            <label for="question4">Q5: How would you rate the value for money of your purchase?</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="question4" id="periodOfUsing1" value="Less than a month">
                <label class="form-check-label" for="periodOfUsing1">Poor</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="question4" id="periodOfUsing2" value="1-12 months">
                <label class="form-check-label" for="periodOfUsing2">Average</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="question4" id="periodOfUsing3" value="1-3 years">
                <label class="form-check-label" for="periodOfUsing3">Good</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="question4" id="periodOfUsing4" value="Over 3 years">
                <label class="form-check-label" for="periodOfUsing4">Very Good</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="question4" id="periodOfUsing5" value="Haven't used it yet">
                <label class="form-check-label" for="periodOfUsing5">Excellent</label>
            </div>
          </div>
          <div class="from-group">
            <label for="question5">Q6: How satisfied are you with our quality of service?</label><br>
            <select name="question5" class="form-control" id="ageRange">
                <option selected>Choose...</option>
                <option value="Very satisfied">Very satisfied</option>
                <option value="Satisfied">Satisfied</option>
                <option value="Neutral">Neutral</option>
                <option value="Unsatisfied">Unsatisfied</option>
                <option value="Very Unsatisfied">Very Unsatisfied</option>
            </select>
          </div>
          <br>
        <button class="btn btn-outline-light" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/templates" class="btn btn-outline-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>



<!--HTML Footer part-->
<%- include ../partials/footer.ejs %> 