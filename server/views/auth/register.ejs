<%- include ../partials/header.ejs %>
<%- include ../partials/nav.ejs %>

<main class="container">
  <br>
    <!-- Message Area -->
    <% if(messages.length > 0) {%>
    <div class="alert alert-danger"><%= messages %></div>
    <% } %>
  
    <div class="row">
      <div class="offset-md-4 col-md-4">
        <h1 id="pr">Please Register</h1>
        <form method="POST" autocomplete="off">
          <fieldset class="form-group">
            <label for="username" id="un">Username: </label>
            <input
              type="text"
              class="form-control"
              name="username"
              placeholder="Enter username"
              id="username"
              required
              autofocus
            />
          </fieldset>
          <br>
          <fieldset class="form-group">
            <label for="password" id="pw">Password: </label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Enter password"
              id="password"
              required
            />
            </fieldset>
            <br>
            <fieldset class="form-group">
              <label for="email" id="em">Email: </label>
              <input type="email" class="form-control"
              name="email" placeholder="Enter Email Address"
              id="email" required>
          </fieldset>
          <br>
          <fieldset class="form-group">
              <label for="displayName" id="dn">Display Name: </label>
              <input type="text" class="form-control"
              name="displayName" placeholder="Enter Display Name"
              id="displayName" required>
          </fieldset>
          
          <br>
          <fieldset class="form-group text-right">
            <input type="submit" class="btn btn-outline-light" value="Register" />
            <a href="/">
              <input type="button" class="btn btn-outline-warning" value="Cancel" />
            </a>
          </fieldset>
        </form>
      </div>
    </div>
  </main>
  
<!--HTML Footer part-->
<%- include ../partials/footer.ejs %> 